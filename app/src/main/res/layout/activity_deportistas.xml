<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo_login_register"
    android:layout_height="match_parent"
    tools:context=".DeportistasActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titulo"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="Lista de Deportistas"
            android:gravity="center"
            android:textColor="#000"
            android:fontFamily="@font/babaca"
            android:textSize="50sp">
        </TextView>
        <Button
            android:id="@+id/btnAgregar"
            android:text="Agregar\nDeportista"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:background="@drawable/marco_boton"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titulo"
        android:id="@+id/recycler_deportistas"
        />
</RelativeLayout>