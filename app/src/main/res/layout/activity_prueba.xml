<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo_deporte"
    tools:context=".PruebaActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/babaca"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Por favor ingrese el codigo del alumno"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:background="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/codigoAlumno"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnOK"
                    android:text="OK"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_width="270dp"

                    android:layout_height="60dp"
                    android:background="@drawable/marco_boton"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:fontFamily="@font/babaca"
                    android:text="RESULTADOS">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/babaca"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Nombre del alumno"
                    android:layout_height="wrap_content">
                </TextView>

                <EditText
                    android:id="@+id/nombreAlumno"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="#FFF"></EditText>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:id="@+id/recycler_tiempos"
                android:layout_height="300dp">
            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:fontFamily="@font/babaca"
                    android:text="Parametros">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/babaca"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Tiempo Total(s)"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:background="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/tiempo"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/babaca"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Distancia(m)"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:background="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/distancia"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/babaca"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:text="Velocidad mÃ¡xmia(m/s)"
                    android:layout_height="wrap_content">
                </TextView>
                <EditText
                    android:background="#FFF"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:id="@+id/vomax"
                    android:layout_height="wrap_content">
                </EditText>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>