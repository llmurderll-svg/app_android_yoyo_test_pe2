<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fongo_upc"
    android:layout_height="match_parent"
    tools:context=".SeleccionActivity">
    <TextView
        android:id="@+id/titulo"
        android:layout_marginTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/babaca"
        android:gravity="center"
        android:text="BIENVENIDOS"
        android:textColor="#2196F3"
        android:textSize="55sp"></TextView>
    <LinearLayout
        android:layout_below="@+id/titulo"
        android:id="@+id/registro"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/deportistas"
            android:layout_height="match_parent"
            android:layout_weight="2">
        </ImageView>
        <Button
            android:id="@+id/btnDeporRegistrados"
            android:text="Deportistas Regis."
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:background="@drawable/marco_boton"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/registro"
        android:id="@+id/prueba"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="100dp">
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/prueba"
            android:layout_height="match_parent"
            android:layout_weight="2">
        </ImageView>
        <Button
            android:id="@+id/btnInicioPrueba"
            android:text="Iniciar Prueba"
            android:textColor="#000"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="60dp"
            android:background="@drawable/marco_boton"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />
    </LinearLayout>
    <Button
        android:id="@+id/CerrarSesion"
        android:text="Cerrar SesiÃ³n"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/prueba"
        android:textColor="#000"
        android:layout_marginHorizontal="40dp"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/marco_boton"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />
</RelativeLayout>