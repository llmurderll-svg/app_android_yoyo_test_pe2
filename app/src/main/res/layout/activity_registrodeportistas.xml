<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_register"
    tools:context=".RegistrodeportistasActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVO DEPORTISTA"
        android:textColor="#000000"
        android:textSize="60dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/txtTitulo"
        android:fontFamily="@font/babaca">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Porfavor, ingrese sus datos, para completar el registro"
        android:textColor="#F4511E"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_below="@+id/txtTitulo"
        android:id="@+id/txtTexto"
        android:fontFamily="@font/babaca">
    </TextView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/txtTexto"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardNombre"
                app:cardElevation="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="NOMBRE:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtNombre"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardApellidoPaterno"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardNombre">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Apellido Paterno:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtApellidoPaterno"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardApellidoMaterno"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardApellidoPaterno">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Apellido Materno:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtApellidoMaterno"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardCorreo"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardApellidoMaterno">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Codigo:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtCodigo"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardDeporte"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardCorreo">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Deporte:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtDeporte"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardEdad"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardDeporte">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Edad:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtEdad"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardAltura"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardEdad">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Altura:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtAltura"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardPeso"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardAltura">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Peso:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtPeso"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                app:cardCornerRadius="10dp"
                android:id="@+id/cardSexo"
                app:cardElevation="15dp"
                android:layout_below="@+id/cardPeso">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="#2193F3"
                        android:fontFamily="@font/babaca"
                        android:text="Sexo:"
                        android:textColor="#000"
                        android:textSize="25sp"
                        android:gravity="center"
                        android:layout_weight="2"/>
                    <EditText
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:id="@+id/edtSexo"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:layout_weight="2"
                        android:background="#FFF"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cardSexo"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnRegistrar"
                    android:text="Registrar"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="@drawable/marco_boton"
                    android:shadowColor="#A8A8A8"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</RelativeLayout>