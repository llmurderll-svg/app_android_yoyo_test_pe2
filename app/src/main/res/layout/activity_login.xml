<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo_login_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INICIAR SESIÓN"
        android:textColor="#000000"
        android:textSize="60dp"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:id="@+id/txtTitulo"
        android:fontFamily="@font/babaca">
    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingrese el correo y la contraseña, \npara comenzar"
        android:textColor="#F4511E"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_below="@+id/txtTitulo"
        android:id="@+id/txtTexto"
        android:fontFamily="@font/babaca">
    </TextView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="40dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardCorreo"
        app:cardElevation="15dp"
        android:layout_below="@+id/txtTexto">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#2193F3"
                android:fontFamily="@font/babaca"
                android:text="Correo:"
                android:textColor="#000"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="2"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:maxLines="1"
                android:textColor="#000"
                android:id="@+id/edtCorreo"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="2"
                android:background="#FFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:cardCornerRadius="10dp"
        android:id="@+id/cardPassword"
        app:cardElevation="15dp"
        android:layout_below="@+id/cardCorreo">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#2193F3"
                android:fontFamily="@font/babaca"
                android:text="Contraseña:"
                android:textColor="#000"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_weight="2"/>
            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#000"
                android:id="@+id/edtPassword"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_weight="2"
                android:background="#FFF"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cardPassword"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnIngresar"
            android:text="Ingresar"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:background="@drawable/marco_boton"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            />

    </LinearLayout>
</RelativeLayout>